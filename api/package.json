{
  "name": "api-ae-node-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run migrate && ts-node ./src/server.ts",
    "dev": "npm run migrate && ts-node-dev --poll --no-notify ./src/server.ts",
    "lint": "tslint --exclude **/*.d.ts src/**/*.ts",
    "migrate": "ts-node ./tasks/migrate",
    "test": "npm run migrate && mocha -r ts-node/register spec/**/*.spec.ts --exit",
    "test-report": "npm run migrate && mocha -r ts-node/register spec/**/*.spec.ts --reporter mocha-junit-reporter",
    "test-watch": "npm run migrate && mocha -w -r ts-node/register --watch-extensions ts ./spec/**/*.spec.ts"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/express-rate-limit": "^2.9.3",
    "@types/express-session": "^1.15.10",
    "@types/knex": "^0.14.23",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.9.3",
    "@types/node-uuid": "0.0.28",
    "@types/passport": "^0.4.6",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "dumper.js": "^1.1.1",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "prettier": "^1.14.2",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-consistent-codestyle": "^1.13.3",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "error-middleware": "^3.0.0",
    "express": "^4.16.3",
    "express-async-handler": "^1.1.4",
    "express-http-context": "^1.0.4",
    "express-rate-limit": "^3.1.0",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "knex": "^0.15.2",
    "morgan": "^1.9.0",
    "node-uuid": "^1.4.8",
    "passport": "^0.4.0",
    "passport-linkedin-oauth2": "^1.5.0",
    "pg": "^7.4.3",
    "winston": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,scss,md,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
