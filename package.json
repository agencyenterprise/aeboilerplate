{
  "name": "ae-node-boilerplate",
  "version": "1.0.0",
  "description": "AE Node boilerplate meta project",
  "scripts": {
    "create-client": "cd ./client-generator && npm run create",
    "api-npm-i-d": "cd api && docker-compose run --rm api npm i -D",
    "api-npm-i-s": "cd api && docker-compose run --rm api npm i -S",
    "site-npm-i-sass": "docker-compose run --rm site npm i node-sass",
    "api-npm-i": "cd api && docker-compose run --rm api npm i",
    "api-start": "cd api && docker-compose up",
    "api-test-watch": "cd api && docker-compose -f docker-compose.tests-services.yml up --remove-orphans",
    "stop-containers": "docker stop $(docker ps -a -q)",
    "first-run": "npm run api-npm-i && npm run stop-containers && npm run create-client",
    "show-containers": "docker ps --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Ports}}'",
    "start": "docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agencyenterprise/ae-node-boilerplate.git"
  },
  "author": {
    "name": "AE Studio",
    "url": "https://ae.studio/"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/agencyenterprise/ae-node-boilerplate/issues"
  },
  "homepage": "https://github.com/agencyenterprise/ae-node-boilerplate#readme",
  "dependencies": {},
  "devDependencies": {}
}
